{
    "name": "@finos/perspective-viewer",
    "version": "1.0.1",
    "description": "The `<perspective-viewer>` Custom Element, frontend for Perspective.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/finos/perspective"
    },
    "license": "Apache-2.0",
    "main": "dist/umd/perspective-viewer.inline.js",
    "module": "dist/umd/perspective-viewer.inline.js",
    "browser": "dist/umd/perspective-viewer.inline.js",
    "unpkg": "dist/umd/perspective-viewer.js",
    "jsdelvr": "dist/umd/perspective-viewer.js",
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "types": "dist/esm/index.d.ts",
    "scripts": {
        "build:wasm": "wasm-pack build --out-dir dist/pkg --target web && rm dist/pkg/package.json && rm dist/pkg/.gitignore",
        "build:rollup:js": "yarn rollup --config rollup.config.js",
        "build:rollup:css": "yarn rollup --config rollup.config.js --config-inline-css",
        "build:webpack:inline": "yarn webpack --color --config webpack.inline.config.js",
        "build:webpack:umd": "yarn webpack --color --config webpack.config.js",
        "build:webpack": "yarn npm-run-all -p build:webpack:umd build:webpack:inline",
        "build:less": "yarn cpy 'src/less/*' dist/less",
        "build": "yarn npm-run-all build:rollup:css build:wasm build:rollup:js build:webpack build:less",
        "watch:wasm": "cargo watch -i .gitignore -i \"pkg/*\" -i \"src/js/*\" -s \"yarn build:wasm\"",
        "watch:rollup": "yarn rollup --watch --config rollup.config.js",
        "watch:webpack": "yarn webpack --watch --color --config webpack.config.js",
        "watch": "yarn npm-run-all -p watch:rollup watch:wasm watch:webpack",
        "postbuild": "yarn rimraf pkg/package.json pkg/.gitignore",
        "clean": "yarn rimraf dist && rimraf pkg && rimraf target",
        "clean:screenshots": "yarn rimraf \"test/screenshots/**/*.@(failed|diff).png\"",
        "docs": "yarn npm-run-all docs:build docs:concat docs:deploy",
        "docs:build": "yarn typedoc --hideBreadcrumbs --out dist/docs --readme none --excludePrivate src/ts/index.ts",
        "docs:concat": "yarn node ./docs.js",
        "docs:deploy": "(echo \"---\nid: perspective-viewer\ntitle: perspective-viewer API\n---\n\n\"; cat README.md) > ../../docs/obj/perspective-viewer.md",
        "fix": "yarn lint --fix && cargo fmt",
        "lint": "yarn eslint src/ts",
        "test:build:rust": "yarn cpy ../../packages/perspective/dist/umd/perspective.inline.js dist/pkg/",
        "test:build:js": "yarn cpy \"test/html/*\" dist/umd && yarn cpy \"test/csv/*\" dist/umd && yarn cpy \"test/css/*\" dist/umd",
        "test:build": "yarn npm-run-all 'test:build:*'",
        "test:run:rust": "HEADLESS_TIMEOUT=40 wasm-pack test --chrome --headless",
        "test:run": "yarn jest --rootDir=. --config=../../packages/perspective-test/jest.config.js --color --noStackTrace 2>&1",
        "test:clean": "yarn rimraf perspective.csv || true",
        "test": "yarn test:build && npm-run-all -p test:run:rust test:run && yarn test:clean"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@finos/perspective": "^1.0.1",
        "mobile-drag-drop-shadow-dom": "3.0.0",
        "monaco-editor": "0.24.0"
    },
    "optionalDependencies": {
        "monaco-editor-webpack-plugin": "3.1.0"
    },
    "devDependencies": {
        "@finos/perspective-test": "workspace:^",
        "@rollup/plugin-typescript": "npm:^8.2.5",
        "cpy-cli": "npm:^3.1.1",
        "jest": "npm:^25.1.0",
        "npm-run-all": "npm:^4.1.3",
        "postcss": "npm:^7.0.19",
        "rimraf": "npm:3.0.2",
        "rollup": "npm:^2.38.5",
        "rollup-plugin-filesize": "npm:^9.1.0",
        "rollup-plugin-postcss": "npm:^3.1.8",
        "rollup-plugin-sourcemaps": "npm:^0.6.3",
        "sinon": "npm:^7.3.1",
        "tslib": "npm:^1.10.0",
        "typescript": "npm:4.3.3",
        "webpack": "workspace:^"
    }
}

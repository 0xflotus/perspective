{
    "name": "@finos/perspective-viewer-d3fc",
    "version": "1.0.1",
    "description": "Perspective.js D3FC Plugin",
    "main": "./dist/cjs/perspective-viewer-d3fc.js",
    "module": "./dist/cjs/perspective-viewer-d3fc.js",
    "browser": {
        "area": "./dist/esm/index/area.js",
        "bar": "./dist/esm/index/bar.js",
        "candlestick": "./dist/esm/index/candlestick.js",
        "column": "./dist/esm/index/column.js",
        "heatmap": "./dist/esm/index/heatmap.js",
        "line": "./dist/esm/index/line.js",
        "ohlc": "./dist/esm/index/ohlc.js",
        "sunburst": "./dist/esm/index/sunburst.js",
        "xy-scatter": "./dist/esm/index/xy-scatter.js",
        "y-scatter": "./dist/esm/index/y-scatter.js"
    },
    "unpkg": "./dist/umd/perspective-viewer-d3fc.js",
    "jsdelivr": "./dist/umd/perspective-viewer-d3fc.js",
    "files": [
        "dist/**/*",
        "babel.config.js"
    ],
    "scripts": {
        "bench": "yarn npm-run-all bench:build bench:run",
        "bench:build": "echo \"No Benchmarks\"",
        "bench:run": "echo \"No Benchmarks\"",
        "prebuild": "yarn mkdirp dist/esm",
        "build:babel": "yarn cpy \"src/**/*\" dist && yarn babel src/js --source-maps --out-dir dist/esm",
        "build:webpack:cjs": "yarn webpack --color --config src/config/cjs.config.js",
        "build:webpack:umd": "yarn webpack --color --config src/config/umd.config.js",
        "build:webpack": "yarn npm-run-all build:webpack:cjs build:webpack:umd",
        "build": "yarn npm-run-all --silent build:babel build:webpack:cjs build:webpack:umd",
        "test:build": "yarn cpy \"test/html/*\" dist/umd",
        "watch": "yarn webpack --color --watch --config src/config/d3fc.watch.config.js",
        "test:run": "yarn jest --rootDir=. --config=../perspective-test/jest.config.js --color --noStackTrace 2>&1",
        "test": "yarn npm-run-all test:build test:run",
        "clean": "yarn rimraf dist",
        "clean:screenshots": "yarn rimraf \"test/screenshots/**/*.@(failed|diff).png\""
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/finos/perspective"
    },
    "author": "",
    "license": "Apache-2.0",
    "dependencies": {
        "@finos/perspective": "^1.0.1",
        "@finos/perspective-viewer": "^1.0.1",
        "chroma-js": "^1.3.4",
        "d3": "^7.1.1",
        "d3-svg-legend": "^2.25.6",
        "d3fc": "15.2.4",
        "gradient-parser": "0.1.5"
    },
    "devDependencies": {
        "@babel/cli": "npm:^7.8.4",
        "@finos/perspective-test": "^1.0.1",
        "cpy-cli": "npm:^3.1.1",
        "jest": "npm:^25.1.0",
        "npm-run-all": "npm:^4.1.3",
        "rimraf": "npm:3.0.2",
        "rollup": "npm:^2.38.5",
        "webpack": "workspace:^"
    }
}

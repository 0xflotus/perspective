{
    "name": "@finos/perspective-cli",
    "version": "1.0.1",
    "description": "Perspective.js CLI",
    "main": "build/index.js",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "build/**/*",
        "perspective",
        "babel.config.js"
    ],
    "typings": "index.d.ts",
    "scripts": {
        "prebuild": "yarn mkdirp build",
        "build": "yarn babel src/js --source-maps --out-dir build && yarn cpy \"src/html/*\" build/html",
        "clean": "yarn rimraf build"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/finos/perspective"
    },
    "author": "",
    "license": "Apache-2.0",
    "bin": {
        "perspective": "perspective"
    },
    "dependencies": {
        "@finos/perspective": "^1.0.1",
        "@finos/perspective-viewer": "^1.0.1",
        "@finos/perspective-viewer-d3fc": "^1.0.1",
        "@finos/perspective-viewer-datagrid": "^1.0.1",
        "commander": "^2.19.0"
    },
    "devDependencies": {
        "@babel/cli": "npm:^7.8.4",
        "cpy-cli": "npm:^3.1.1"
    }
}
